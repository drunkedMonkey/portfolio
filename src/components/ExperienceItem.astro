---
export interface Props {
  title: string;
  company: string;
  location: string;
  date: string;
  description: string;
  skills: string[];
}
const { title, company, location, date, description, skills } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-bold leading-none text-gray-300 dark:text-gray-500"
  >{date} at {company} ({location})</time
>
<h3 class="text-lg font-semibold text-yellow-200 dark:text-white">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-400 dark:text-gray-400">
  {description}
</p>
